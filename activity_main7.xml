<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <AbsoluteLayout
        android:id="@+id/myLayout"
        android:stretchColumns="0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign Up"
            android:textSize="30sp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView android:text="ID"
            android:layout_x="30dp"
            android:layout_y="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/editLogid"
            android:inputType="number"
            android:layout_x="150dp"
            android:layout_y="50dp"
            android:layout_width="150dp"
            android:layout_height="40dp"/>
        <TextView android:text="Name"
            android:layout_x="30dp"
            android:layout_y="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/editName"
            android:inputType="text"
            android:layout_x="150dp"
            android:layout_y="100dp"
            android:layout_width="150dp"
            android:layout_height="40dp"/>
        <TextView android:text="Email ID"
            android:layout_x="30dp"
            android:layout_y="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/editEmail"
            android:inputType="text"
            android:layout_x="150dp"
            android:layout_y="150dp"
            android:layout_width="150dp"
            android:layout_height="40dp"/>

        <TextView android:text="Password"
            android:layout_x="30dp"
            android:layout_y="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText android:id="@+id/editPass"
            android:inputType="number"
            android:layout_x="150dp"
            android:layout_y="200dp"
            android:layout_width="150dp"
            android:layout_height="40dp"/>

        <Button
            android:id="@+id/btnReg"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_x="41dp"
            android:layout_y="254dp"
            android:text="Register" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_x="150dp"
            android:layout_y="254dp"
            android:text="Login" />n


    </AbsoluteLayout>

</RelativeLayout>
