<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main9Activity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Help"
        android:textSize="30sp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorPrimaryDark"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">
        <TableRow>
            <TextView
                android:text="Calorie"
                android:padding="3dip" />
            <TextView
                android:text="BMR Activity Level"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="1,926"
                android:padding="3dip" />

            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:text="little or no exercise" />

        </TableRow>
            <TableRow>
                <TextView
                    android:text="2,207"
                    android:padding="3dip" />

                <TextView
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Exercise 1-3 times/week" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="2,351"
                    android:padding="3dip" />

                <TextView
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Exercise 4-5 times/week" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="2,488"
                    android:padding="3dip" />

                <TextView
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Daily Exercise " />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="2,769"
                    android:padding="3dip" />

                <TextView
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Intense exercise 6-7 times/week" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="3,050"
                    android:padding="3dip" />

                <TextView
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Intense exercise Daily" />



        </TableRow>
    </TableLayout>
</LinearLayout>